---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />

		<!-- icon and color-theme -->
		<link rel="icon" type="image/png" href="/antena.png" />
		<meta name="theme-color" content="#4834d4" />

		<!-- Open Graph Protocol -->
		<meta property="og:title" content="Ezequiel Stom's Links Center 🌐" />
		<meta
			property="og:description"
			content="Explore Ezequiel Stom's Links Center – Your one-stop destination for my portfolio, resume, GitHub, and LinkedIn. Discover my professional journey and connect with me across different platforms. Thanks for visiting! 👨‍💻"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://links-center.netlify.app/" />
		<meta property="og:image" content="../img/qr-links.png" />

		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Mona Sans", sans-serif, system-ui;
		src:
			url("https://assets.codepen.io/64/Mona-Sans.woff2")
				format("woff2 supports variations"),
			url("https://assets.codepen.io/64/Mona-Sans.woff2")
				format("woff2-variations");
		font-weight: 100 1000;
	}
</style>
